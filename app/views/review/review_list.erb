<%= render :partial => "/home/navbar" %>
<div class = "container">
  <div class = "card">

    <div class = "container">

      <div class = "section">
        <div class="row">
          <div class = "col s12 m12 l12">
            <span class = "card-title"><h2 class = "teal-text text-darken-4" ><%= @one_review.detail_address %></h2></span>
          </div>
          <div class = "divider"></div>
          <a class="col s6 m3 l3 teal-text center waves-effect waves-teal btn-flat" href="/review/review_front/<%= @one_review.parcel_address %>">기본 계약 정보</a>
          <a class="col s6 m3 l3 teal-text center waves-effect waves-teal btn-flat" href="/review/create">리뷰 쓰기</a>
          <a class="col s6 m3 l3 black-text center waves-effect waves-teal btn-flat">리뷰 목록</a>
          <a class="col s6 m3 l3 teal-text center waves-effect waves-teal btn-flat" href="/review/review_board/<%= @one_review.parcel_address %>">커뮤니티</a>

        </div>

        <div class = "row">
          <div class = "col s12 m12 l12">
            <h5 style = "font-weight: bold">리뷰 목록</h5>
          </div>
        </div>

        <div class = "row">
          <% @review.each do |r| %>
            <div class = "col s12 m6 l4">

              <div class = "card-panel small hoverable">

                <div class = "card-content" style = "padding:0px">
                  <% if @user_review.nil? %>
                    <div class = "row" style = "margin :0px">
                      <h4 style = "overflow:hidden;white-space:nowrap; text-overflow:ellipsis;" ><a class="teal-text" href="/review/review_error"><%= r.detail_address %></a></h4>
                    </div>
                  <% else %>
                    <div class = "row" style = "margin :0px">
                      <h4 style = "overflow:hidden;white-space:nowrap; text-overflow:ellipsis;" ><a class="teal-text" href="/review/review/<%= r.id %>"><%= r.detail_address %></a></h4>
                    </div>
                  <% end %>
                  <div class= "row">

                    <% if r.avg1 == 5 %>
                    <div class= "col s6 m6 l6">
                      <label for ="sisul">시설점수 (5점)</label>
                      <img name ="sisul" class="responsive-img " src="<%= image_path "5point.png" %>" >
                    </div>
                    <% else %>
                      <%if r.avg1 >= 4%>
                      <div class= "col s6 m6 l6">
                        <label for ="sisul">시설점수 (4점)</label>
                        <img name ="sisul" class="responsive-img " src="<%= image_path "4point.png" %>" >
                      </div>
                      <% else %>
                        <% if r.avg1 >= 3%>
                        <div class= "col s6 m6 l6">
                          <label for ="sisul">시설점수 (3점)</label>
                          <img name ="sisul" class="responsive-img " src="<%= image_path "3point.png" %>" >
                        </div>
                        <% else %>
                          <% if r.avg1 >= 2%>
                          <div class= "col s6 m6 l6">
                            <label for ="sisul">시설점수 (2점)</label>
                            <img name ="sisul" class="responsive-img " src="<%= image_path "2point.png" %>" >
                          </div>
                          <% else %>
                          <div class= "col s6 m6 l6">
                            <label for ="sisul">시설점수 (1점)</label>
                            <img name ="sisul" class="responsive-img " src="<%= image_path "1point.png" %>" >
                          </div>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% end %>

                    <% if r.avg2 == 5 %>
                    <div class= "col s6 m6 l6">
                      <label for ="environ">환경점수 (5점)</label>
                      <img name ="environ" class="responsive-img " src="<%= image_path "5point.png" %>" >
                    </div>
                    <% else %>
                      <%if r.avg2 >= 4%>
                      <div class= "col s6 m6 l6">
                        <label for ="environ">환경점수 (4점)</label>
                        <img name ="environ" class="responsive-img " src="<%= image_path "4point.png" %>" >
                      </div>
                      <% else %>
                        <% if r.avg2 >= 3%>
                        <div class= "col s6 m6 l6">
                          <label for ="environ">환경점수 (3점)</label>
                          <img name ="environ" class="responsive-img " src="<%= image_path "3point.png" %>" >
                        </div>
                        <% else %>
                          <% if r.avg2 >= 2%>
                          <div class= "col s6 m6 l6">
                            <label for ="environ">환경점수 (2점)</label>
                            <img name ="environ" class="responsive-img " src="<%= image_path "2point.png" %>" >
                          </div>
                          <% else %>
                          <div class= "col s6 m6 l6">
                            <label for ="environ">환경점수 (1점)</label>
                            <img name ="environ" class="responsive-img " src="<%= image_path "1point.png" %>" >
                          </div>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% end %>

                  </div>
                  <div class = "row">
                    <div class = "col s12 m12 l12">
                      <label for ="oneline1">한줄평</label>
                      <h6 name = "oneline1" style = "overflow:hidden;white-space:nowrap; text-overflow:ellipsis; "><%= r.comment1 %></h6>
                    </div>
                  </div>
                  <div class= "row">
                    <div class= "col s12 m12 l12">
                      <label for ="oneline2">기타의견</label>
                      <% if r.comment2.blank?%>
                      <h6>없음</h6>
                      <% else %>
                      <h6 name = "oneline2" style = "overflow:hidden;white-space:nowrap; text-overflow:ellipsis; "><%= r.comment2 %></h6>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="card-action" style = "padding-top:10px; padding-bottom:5px; padding-left:0px; padding-right:0px;">
                  <% if @user_review.nil? %>
                    <a class="modal-trigger" href="#modal1" id ="modal_ad">자세한 리뷰 보기</a>
                    <!-- <a href="/review/review_error" >자세한 리뷰 보기</a> -->

                  <% else %>
                    <a href="/review/review/<%= r.id %>" >자세한 리뷰 보기</a>
                  <% end %>



                </div>
              </div>
            </div>
            <div id="modal1" class="modal">
               <div class="modal-content">
                 <h4>광고들어가는 곳 데헷>_<</h4>
                 <p>리뷰 보고 싶으면 리뷰 쓰거나 5초 기다려!</p>
               </div>
               <div class="modal-footer">
                 <a id = "ad_close" href="/review/review/<%= r.id %>" class=" modal-action modal-close waves-effect waves-green btn-flat">리뷰보기</a>
                 <h5 id = "countdown" class="btn-flat black-text disabled"></h5>

               </div>
            </div>
          <% end %>

        </div>

      </div>


    </div>
  </div>
</div>

