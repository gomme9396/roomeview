<%= render :partial => "/home/navbar" %>
<div class="container">
    <div class="card">

        <div class="container">

            <div class="section">
                <div class="row">
                    <div class="col s12 m12 l12">
                        <span class="card-title">
                            <h2 class="teal-text text-darken-4"><%= @one_review.detail_address %></h2>
                        </span>
                    </div>
                    <div class="divider"></div>
                    <div class="col s12 m12 l12">
                        <ul class="tabs">
                            <li class="tab col s3">
                                <a target="_self" href="/review/review_front/<%= @one_board.parcel_address %>">기본 계약 정보</a>
                            </li>
                            <li class="tab col s3">
                                <a target="_self" href="/review/create">리뷰 쓰기</a>
                            </li>
                            <li class="tab col s3">
                                <a target="_self" href="/review/review_list/<%= @one_board.parcel_address %>">리뷰 목록</a>
                            </li>
                            <li class="tab col s3">
                                <a class="active" target="_self" href="/review/review_board/<%= @one_board.parcel_address %>">커뮤니티</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12 m12 l12">
                        <div class="card-panel small hoverable yellow lighten-5">

                            <div class="card-content">
                                <div class="row" style="margin :0px">
                                    <h5 class="black-text" style="overflow:hidden;white-space:nowrap; text-overflow:ellipsis; "><%= @one_board.title %></h5>
                                </div>
                            </div>
                            <div class="card-action" style="padding-top:10px; padding-bottom:10px;">
                                <div class="row" style="margin:0px">
                                    <div class="col s12 m6 l6" style="padding:0px">
                                        <a class="black-text">작성자 : <%= @one_board.writer %></a>
                                    </div>
                                    <div class="col s12 m6 l6" style="padding:0px">
                                        <a class="black-text">작성일시 : 2016/12/15 20:00</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-action" style="padding">
                                <div class="row">
                                    <div class="col s12 m12 l12">
                                        <label for="oneline1">내용</label>
                                        <h6 name="oneline1" style="overflow:hidden;white-space:nowrap; text-overflow:ellipsis; "><%= @one_board.content %></h6>
                                    </div>
                                </div>
                                <div class="row " style="margin:0px">
                                    <a href="/review/review_board/<%= @one_board.parcel_address %>">목록</a>
                                    <% if @one_board.writer == session[:user_id] %>
                                        <a href="/review/review_board_update/<%= @one_board.id %>">수정</a>
                                        <a href="/review/review_board_destroy/<%= @one_board.id %>">삭제</a>
                                    <% else %>
                                    <% end %>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
<%= render :partial => "/home/footer" %>
